{
  "exclude": [
    "node_modules",
    "lib",
    "examples"
  ],
  "compilerOptions": {
    // target
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    // build
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    // linting
    "strict": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noErrorTruncation": true,
    "importsNotUsedAsValues": "error",
    // sources
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "baseUrl": "./src",
    "paths": {
      "@address/*": [
        "./address/*"
      ],
      "@auth/*": [
        "./auth/*"
      ],
      "@auth/internal/*": [
        "./internal/auth/*"
      ],
      "@dapp/*": [
        "./dapp/*"
      ],
      "@dapp/internal/*": [
        "./internal/dapp/*"
      ],
      "@encryption/*": [
        "./encryption/*"
      ],
      "@encryption/internal/*": [
        "./internal/encryption/*"
      ],
      "@data-service-api/*": [
        "./internal/data-service-api/*"
      ],
      "@messaging/*": [
        "./messaging/*"
      ],
      "@messaging/internal/*": [
        "./internal/messaging/*"
      ],
      "@sdk/*": [
        "./sdk/*"
      ],
      "@sdk/internal/*": [
        "./internal/sdk/*"
      ],
      "@utils/internal/*": [
        "./internal/utils/*"
      ],
      "@wallet/*": [
        "./wallet/*"
      ],
      "@wallet/internal/*": [
        "./internal/wallet/*"
      ],
      "@wallet-adapter/*": [
        "./wallet-adapter/*"
      ],
      "@wallet-adapter/internal/*": [
        "./internal/wallet-adapter/*"
      ],
    }
  },
  "rootDir": "./src",
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts", "src/shim.js", 
  ]
}
