{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@address/*": ["./address/*"],
      "@auth/*": ["./auth/*"],
      "@auth/internal/*": ["./internal/auth/*"],
      "@dapp/*": ["./dapp/*"],
      "@dapp/internal/*": ["./internal/dapp/*"],
      "@encryption/*": ["./encryption/*"],
      "@encryption/internal/*": ["./internal/encryption/*"],
      "@data-service-api/*": ["./internal/data-service-api/*"],
      "@messaging/*": ["./messaging/*"],
      "@messaging/internal/*": ["./internal/messaging/*"],
      "@sdk/*": ["./sdk/*"],
      "@sdk/internal/*": ["./internal/sdk/*"],
      "@utils/internal/*": ["./internal/utils/*"],
      "@wallet/*": ["./wallet/*"],
      "@wallet/internal/*": ["./internal/wallet/*"],
      "@wallet-adapter/*": ["./wallet-adapter/*"],
      "@wallet-adapter/internal/*": ["./internal/wallet-adapter/*"],
      "@identity/*": ["./identity/*"],
      "@identity/internal/*": ["./internal/identity/*"]
    }
  },
  "rootDir": "./src",
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
